<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/sectionscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingLeft="32dp"
            android:paddingTop="32dp"
            android:paddingEnd="32dp"
            android:paddingRight="32dp"
            android:paddingBottom="64dp">

            <ImageView
                android:id="@+id/ferrari2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="8dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/Mc_Laren" />

            <TextView
                android:id="@+id/Title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif"
                android:text="Dashboard"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/participante"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@drawable/form_border"
                android:paddingStart="32dp"
                android:paddingLeft="32dp"
                android:paddingTop="24dp"
                android:paddingEnd="32dp"
                android:paddingRight="32dp"
                android:paddingBottom="24dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/infolayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/infolayout3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/participante1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/avatar"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/Avatar"
                        tools:targetApi="31" />

                    <ImageView
                        android:id="@+id/participante2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="-12dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/avatar"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/participante1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/profile_girl"
                        tools:targetApi="31" />

                    <ImageView
                        android:id="@+id/participante3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="-12dp"
                        android:background="@drawable/avatar"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/participante2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/profile_woman"
                        tools:targetApi="31" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/infolayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/infolayout1"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/nome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="+300"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/tipoparti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="inscritos"
                        android:textAlignment="textStart"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:typeface="normal" />

                </LinearLayout>

                <Button
                    android:id="@+id/button7"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#2c2c2c"
                    android:fontFamily="sans-serif"
                    android:insetTop="4dp"
                    android:insetBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="ver todos"
                    android:textSize="14sp"
                    android:typeface="normal"
                    app:cornerRadius="8dp"
                    app:iconPadding="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/header2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Sobre o carro"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/location_filter5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/ic_edit"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="editar"
                    android:textAlignment="textEnd"
                    android:textColor="#1E1E1E"
                    app:layout_constraintBaseline_toBaselineOf="@+id/date_filter"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/body1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_background"
                android:paddingStart="32dp"
                android:paddingLeft="32dp"
                android:paddingTop="24dp"
                android:paddingEnd="32dp"
                android:paddingRight="32dp"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:id="@+id/info1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/data1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/date_border"
                        android:fontFamily="sans-serif"
                        android:paddingStart="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="4dp"
                        android:text="Out 2"
                        android:textColor="#802c2c2c"
                        android:textSize="16sp"
                        android:typeface="normal" />

                    <TextView
                        android:id="@+id/hora1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/time_border"
                        android:drawablePadding="4dp"
                        android:fontFamily="sans-serif"
                        android:paddingStart="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="4dp"
                        android:text="23:00"
                        android:textColor="#802c2c2c"
                        android:textSize="16sp"
                        android:typeface="normal"
                        app:drawableStartCompat="@drawable/clock" />
                </LinearLayout>

                <TextView
                    android:id="@+id/titleEvent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Encontro de carros mexidos"
                    android:textAllCaps="true"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/info1" />

                <TextView
                    android:id="@+id/adressEvent1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Av. Santos Dumont, 2241 - Santana, São Paulo - SP, 02012-010"
                    android:textAllCaps="false"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:typeface="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleEvent1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/header3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Descrição do evento"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/editdescrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/ic_edit"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="editar"
                    android:textAlignment="textEnd"
                    android:textColor="#1E1E1E"
                    app:layout_constraintBaseline_toBaselineOf="@+id/date_filter"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prepare-se para um dia inesquecível de velocidade, estilo e paixão automotiva. O Encontro de Carros Esportivos reúne modelos clássicos e supermáquinas atuais em um ambiente vibrante, onde enstusiastas e colecionadores compartilham experiências e histórias sobre o universo dos esportivos. Além da exposição de veículos de alto desempenho, o evento proporciona networking entre amantes de carros, oportunidades de conhecer novas tendências do setor e momentos de pura adrenalina. Seja para exibir o seu carro, participar das atividades ou apenas apreciar de cada detalhe dessas máquinas incríveis, este encontro é feito para quem respira motores e elegância sobre rodas. " />

            <Button
                android:id="@+id/button9"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:text="cancelar"
                android:textColor="#A50D0D"
                android:textSize="16sp"
                android:typeface="normal"
                app:cornerRadius="8dp"
                app:strokeColor="#A50D0D" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/backicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/date_border"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_left" />

    <ImageView
        android:id="@+id/shareicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/date_border"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_share" />

</androidx.constraintlayout.widget.ConstraintLayout>
