<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/sectionscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingLeft="32dp"
            android:paddingTop="32dp"
            android:paddingEnd="32dp"
            android:paddingRight="32dp"
            android:paddingBottom="64dp">


            <ImageView
                android:id="@+id/backicon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/date_border"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_chevron_left" />

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Criando seu evento"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="seus carros prontos pro show!"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:typeface="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_border"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:id="@+id/inputform3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:text="Qual a data e horário?"
                        android:textSize="16sp"
                        android:typeface="normal" />

                    <EditText
                        android:id="@+id/data"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/date_border"
                        android:fontFamily="sans-serif"
                        android:hint="--/--/-- 00:00"
                        android:inputType="date"
                        android:paddingStart="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/inputform1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:text="Qual o local do evento?"
                        android:textSize="16sp"
                        android:typeface="normal" />

                    <EditText
                        android:id="@+id/localevent"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_border"
                        android:fontFamily="sans-serif"
                        android:inputType="text"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="12dp"
                        android:text="Arena Expo Center Norte" />

                    <TextView
                        android:id="@+id/label5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif"
                        android:text="O local será exibido para o público."
                        android:textColor="#AA2c2c2c"
                        android:textSize="14dp"
                        android:typeface="normal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/inputform"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:text="Qual o nome do evento?"
                        android:textSize="16sp"
                        android:typeface="normal" />

                    <EditText
                        android:id="@+id/eventnome"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_border"
                        android:fontFamily="sans-serif"
                        android:hint="digite aqui"
                        android:inputType="text"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="12dp" />

                    <TextView
                        android:id="@+id/label4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif"
                        android:text="Este nome será exibido para o público."
                        android:textColor="#AA2c2c2c"
                        android:textSize="14dp"
                        android:typeface="normal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/inputform4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:text="Contextualize seu público."
                        android:textSize="16sp"
                        android:typeface="normal" />

                    <EditText
                        android:id="@+id/descricao"
                        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_border"
                        android:fontFamily="sans-serif"
                        android:hint="descreva brevemente o seu evento"
                        android:inputType="text"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="12dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/profile_photo_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Adicione uma capa ao evento."
                    android:textSize="16sp"
                    android:typeface="normal" />

                <LinearLayout
                    android:id="@+id/image_placeholder_container"
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/dashed_border"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_placeholder_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        app:tint="#FFD9D9D9" />

                    <TextView
                        android:id="@+id/image_placeholder_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Faça upload de uma imagem"
                        android:textColor="#FFD9D9D9"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#2c2c2c"
                    android:fontFamily="sans-serif"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="publicar evento"
                    android:textSize="16sp"
                    android:typeface="normal"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>