<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/sectionscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingLeft="32dp"
        android:paddingTop="72dp"
        android:paddingEnd="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Informações adicionais"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="personalize a sua experiência"
                android:textColor="#757575"
                android:textSize="16sp"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/participante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_border"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/profile_photo_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:text="Adicione uma foto de perfil."
                android:textSize="16sp"
                android:typeface="normal" />

            <LinearLayout
                android:id="@+id/image_placeholder_container"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/dashed_border"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_placeholder_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    app:tint="#FFD9D9D9" />

                <TextView
                    android:id="@+id/image_placeholder_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Faça upload de uma imagem"
                    android:textColor="#FFD9D9D9"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/inputform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Número de telefone"
                    android:textSize="16sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/eventnome"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:fontFamily="sans-serif"
                    android:hint="insira aqui"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp" />

                <TextView
                    android:id="@+id/label4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="O número será exibido para quem desejar."
                    android:textColor="#AA2c2c2c"
                    android:textSize="14dp"
                    android:typeface="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/inputform2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="CPF"
                    android:textSize="16sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/cpf"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:fontFamily="sans-serif"
                    android:hint="digite seu cpf"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/inputform3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Data de nascimento"
                    android:textSize="16sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/data"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:fontFamily="sans-serif"
                    android:hint="digite sua data de nascimento"
                    android:inputType="date"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="12dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/label5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:text="Sexo"
                android:textSize="16sp"
                android:typeface="normal" />

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="0dp"
                    android:text="Masc"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="0dp"
                    android:text="Fem"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="0dp"
                    android:text="Outro"
                    android:textSize="14sp"
                    android:typeface="normal" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#2c2c2c"
                android:fontFamily="sans-serif"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="entrar"
                android:textSize="16sp"
                android:typeface="normal"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/backicon6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/date_border"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_left" />

</androidx.constraintlayout.widget.ConstraintLayout>